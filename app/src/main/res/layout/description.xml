<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/illDesc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/illCaptionDesc"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#59a214"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/iibBackDesc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="#59a214"
            android:contentDescription="@string/back"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/itvCaptionDesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#59a214"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:maxLines="2"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/iibConfigDesc"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="9dp"
            android:background="#59a214"
            android:scaleType="fitCenter"
            android:src="@drawable/config" />
    </LinearLayout>

    <WebView
        android:id="@+id/iwvHTML"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/illPubDesc"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <com.google.android.gms.ads.AdView
            android:id="@+id/iAdViewDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/UnitId" >
        </com.google.android.gms.ads.AdView>

    </LinearLayout>

</LinearLayout>