<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/illCuprins"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#59a214"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/itvAppNameCuprins"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#59a214"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/app_name_full"
            android:textColor="#ffffff"
            android:maxLines="2"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/iibConfigCuprins"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="9dp"
            android:background="#59a214"
            android:scaleType="fitCenter"
            android:src="@drawable/config" />
    </LinearLayout>

    <ListView
        android:id="@+id/ilvSimpleCuprins"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:cacheColorHint="#00000000" >
    </ListView>

    <LinearLayout
         android:id="@+id/illPubCuprins"
         android:layout_width="320dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:orientation="horizontal" >

         <com.google.android.gms.ads.AdView
             android:id="@+id/iAdViewCuprins"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             ads:adSize="BANNER"
             ads:adUnitId="@string/UnitId" >
         </com.google.android.gms.ads.AdView>
     </LinearLayout>

 </LinearLayout>