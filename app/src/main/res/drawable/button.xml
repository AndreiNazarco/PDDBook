<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient
                android:startColor="#6e4216"
                android:endColor="#6e4216"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#6e4216" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
</item>
